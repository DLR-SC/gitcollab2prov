{
    "$schema": "http://json-schema.org/draft-07/schema",
    "type": "array",
    "items": {
        "oneOf": [
            {
                "$ref": "#/definitions/extract"
            },
            {
                "$ref": "#/definitions/load"
            },
            {
                "$ref": "#/definitions/combine"
            },
            {
                "$ref": "#/definitions/save"
            },
            {
                "$ref": "#/definitions/pseudonymize"
            },
            {
                "$ref": "#/definitions/stats"
            }
        ]
    },
    "definitions": {
        "extract": {
            "type": "object",
            "properties": {
                "extract": {
                    "type": "object",
                    "properties": {
                        "url": {
                            "type": "array",
                            "items": {
                                "format": "uri",
                                "type": "string"
                            }
                        },
                        "token": {
                            "type": "string"
                        }
                    },
                    "additionalProperties": false,
                    "required": [
                        "url",
                        "token"
                    ]
                }
            },
            "additionalProperties": false,
            "required": [
                "extract"
            ]
        },
        "load": {
            "type": "object",
            "properties": {
                "load": {
                    "type": "object",
                    "properties": {
                        "input": {
                            "type": "array",
                            "items": {
                                "type": "string"
                            }
                        }
                    },
                    "additionalProperties": false,
                    "required": [
                        "input"
                    ]
                }
            },
            "additionalProperties": false,
            "required": [
                "load"
            ]
        },
        "combine": {
            "type": "object",
            "properties": {
                "combine": {
                    "type": "null"
                }
            },
            "additionalProperties": false,
            "required": [
                "combine"
            ]
        },
        "pseudonymize": {
            "type": "object",
            "properties": {
                "pseudonymize": {
                    "type": "null"
                }
            },
            "additionalProperties": false,
            "required": [
                "pseudonymize"
            ]
        },
        "save": {
            "type": "object",
            "properties": {
                "save": {
                    "type": "object",
                    "properties": {
                        "output": {
                            "type": "string"
                        },
                        "format": {
                            "type": "array",
                            "items": {
                                "type": "string",
                                "enum": ["json", "rdf", "provn", "dot", "xml"]
                            }
                        }
                    },
                    "additionalProperties": false,
                    "required": [
                        "output",
                        "format"
                    ]
                }
            },
            "additionalProperties": false,
            "required": [
                "save"
            ]
        },
        "stats": {
            "type": "object",
            "properties": {
                "stats": {
                    "type": "object",
                    "properties": {
                        "explain": {
                            "type": "boolean"
                        },
                        "fine": {
                            "type": "boolean"
                        },
                        "coarse": {
                            "type": "boolean"
                        },
                        "formatter": {
                            "type": "string",
                            "enum": [
                                "table",
                                "csv"
                            ]
                        }
                    },
                    "additionalProperties": false
                }
            },
            "additionalProperties": false,
            "required": [
                "stats"
            ]
        }
    }
}